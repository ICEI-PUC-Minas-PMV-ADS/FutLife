@model Agendamento.Models.Usuario

@{
    ViewBag.Title = "FutLife";
    ViewBag.CssFile = "loginstyle.css";
}

<!--Conteúdo Principal -->
<div id="login-container">
    <h3 style="color: black;">Login</h3>
    @using (Html.BeginForm("Login", "Usuario", FormMethod.Post))
    {
        @Html.LabelFor(x => x.Login)
        @Html.TextBoxFor(x => x.Login, new { type = "email", placeholder = "Digite seu e-mail" })
        
        @Html.LabelFor(x => x.Senha)
        @Html.TextBoxFor(x => x.Senha, new { id = "password", name = "password", type = "password", placeholder = "Digite sua senha" })
        
        <a href="#" id="forgot-pass">Esqueceu a senha?</a>
        <input type="submit" value="Login">
    }

    <div id="social-container">
        <p>Ou entre pelas suas redes sociais</p>
        <i class="fa fa-facebook-f"></i>
        <i class="fa fa-linkedin"></i>
    </div>

    <div id="register-container">
        <p>Ainda não tem uma conta?</p>
        <a href="#">Registrar</a>
    </div>

</div>
