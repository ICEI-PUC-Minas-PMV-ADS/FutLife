<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="icon" href="~/Content/img/bola.png">
    <link rel="stylesheet" href="~/Content/@ViewBag.CssFile">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</head>
<body class="" style="background-image: url(../../Content/img/background.png);background-repeat: no-repeat; background-size:cover; background-position:fixed; position:inherit;">
    <div>
        <header>
            <!-- inicio Cabecalho -->
            <nav class="navbar navbar-expand-lg navbar-light fixed-top navbar-transparente">
                <div class="container">

                    <a href="@Url.Action("Index","Home")" class="navbar-brand">
                        <img src="~/Content/img/futlife.svg" width="200">
                    </a>

                    <button class="navbar-toggler" data-toggle="collapse" data-target="#nav-principal">
                        <i class="fas fa-bars text-white"></i>
                    </button>

                    <div class="collapse navbar-collapse" id="nav-principal">
                        <ul class="navbar-nav" style="text-decoration: underline;">
                            <li class="nav-item ml-5">
                                <a href="@Url.Action("Index","Home")" class="nav-link text-white mx-3">Início</a>
                            </li>
                            <li class="nav-item ml-5">
                                <a href="@Url.Action("Agendamento","Agendamento")" class="nav-link text-white mx-3">Agendamento</a>
                            </li>
                            <li class="nav-item ml-5">
                                <a href="@Url.Action("Planos","Plano")" class="nav-link text-white mx-3">Planos</a>
                            </li>
                            <li class="nav-item ml-5">
                                <a href="@Url.Action("Campeonato","Campeonato")" class="nav-link text-white mx-3">Campeonato</a>
                            </li>
                            <li class="nav-item ml-5">
                                <a href="@Url.Action("Perfil","Usuario")" class="nav-link text-white mx-3">Meu Perfil</a>
                            </li>
                        </ul>
                    </div>

                    <div class="collapse navbar-collapse" id="nav-principal">
                        <a class="btn btn-success text-black" href="@Url.Action("Cadastro","Home")" role="button" style="background-color: rgba(255, 255, 255, 0.63) ;border: solid white 3px;">Cadastrar</a>
                        <a class="btn btn-warning text-white" href="@Url.Action("Login","Usuario")" role="button" style="background-color: rgba(22, 22, 22, 0.438) ;border: solid white 3px;">Entrar</a>
                    </div>

                </div>
            </nav>
        </header><!--/fim Cabecalho -->

        @RenderBody()

        <!-- Rodapé -->
        <footer>
            <div class="container">
                <div class="row">
                    <div class="barra-lateral col-md-2 d-flex flex-row justify-content-center justify-content-md-start align-items-start">
                        <img src="~/Content/img/futlife.svg" width="142">
                    </div>
                    <div class="mt-4 mt-md-0 col-md-10 d-flex flex-column py-3 py-sm-0 flex-sm-row justify-content-around gap-3">
                        <div class="col-md-3 d-flex flex-column align-items-center align-items-sm-start">
                            <h4>Sobre nós</h4>
                            <p class="text-center text-sm-start w-100">
                                Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec id lorem nec massa fringilla ultrices ut
                                sit
                                amet justo
                            </p>
                        </div>
                        <div class="col-md-3 d-flex flex-column align-items-center align-items-sm-start">
                            <h4>E-mail</h4>
                            <p>Tem alguma dúvida?</p>
                            <bold>contato@futlife.com</bold>
                        </div>
                        <div class="col-md-3 d-flex flex-column align-items-center align-items-sm-start">
                            <h4>Telefone</h4>
                            <p>Ligue a qualquer hora</p>
                            <bold>(31)99999-9999</bold>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    </div>
</body>
</html>
