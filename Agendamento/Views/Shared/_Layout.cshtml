<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="icon" href="~/Content/img/bola.png">
    <link rel="stylesheet" href="~/Content/style.css">
    <link rel="stylesheet" href="~/Content/pagamstyle.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
</head>
<body class="" style="background-image: url(../../Content/img/background.png);background-repeat: no-repeat; background-size:cover; background-position:fixed; position:inherit;">
    <div>
        <header>
            <!-- inicio Cabecalho -->
            <nav class="navbar navbar-expand-lg navbar-light fixed-top navbar-transparente">
                <div class="container">

                    <a href="@Url.Action("Index","Home")" class="navbar-brand">
                        <img src="~/Content/img/futlife.svg" width="200">
                    </a>

                    <button class="navbar-toggler" data-toggle="collapse" data-target="#nav-principal">
                        <i class="fas fa-bars text-white"></i>
                    </button>

                    <div class="collapse navbar-collapse" id="nav-principal">
                        <ul class="navbar-nav" style="text-decoration: underline;">
                            <li class="nav-item ml-5">
                                <a href="@Url.Action("Index","Home")" class="nav-link text-white mx-3">Início</a>
                            </li>
                            <li class="nav-item ml-5">
                                <a href="@Url.Action("Agendamento","Home")" class="nav-link text-white mx-3">Agendamento</a>
                            </li>
                            <li class="nav-item ml-5">
                                <a href="@Url.Action("Planos","Home")" class="nav-link text-white mx-3">Planos</a>
                            </li>
                            <li class="nav-item ml-5">
                                <a href="@Url.Action("Campeonato","Home")" class="nav-link text-white mx-3">Campeonato</a>
                            </li>
                            <li class="nav-item ml-5">
                                <a href="@Url.Action("Perfil","Home")" class="nav-link text-white mx-3">Meu Perfil</a>
                            </li>
                        </ul>
                    </div>

                    <div class="collapse navbar-collapse" id="nav-principal">
                        <a class="btn btn-success text-black" href="@Url.Action("Cadastro","Home")" role="button" style="background-color: rgba(255, 255, 255, 0.63) ;border: solid white 3px;">Cadastrar</a>
                        <a class="btn btn-warning text-white" href="@Url.Action("Login","Home")" role="button" style="background-color: rgba(22, 22, 22, 0.438) ;border: solid white 3px;">Entrar</a>
                    </div>

                </div>
            </nav>
        </header><!--/fim Cabecalho -->

        @RenderBody()
    </div>
</body>
</html>
